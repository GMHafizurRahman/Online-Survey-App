<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background_1"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/welcome_Screen_Id"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/welcome_text_id"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO"
        android:defaultFocusHighlightEnabled="true"
        android:scaleType="fitXY"
        android:src="@drawable/banner" />

    <TextView
        android:id="@+id/welcome_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif"
        android:forceHasOverlappingRendering="true"
        android:gravity="center"
        android:text="@string/welcome_to_online_survey"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarId"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginBottom="150dp"
        android:progressBackgroundTint="#f9f9f9"
        android:progressTint="#3CDA03" />


</RelativeLayout>